{
    "compilerOptions": {
        "module": "commonjs",
        "target": "esNext",
        "noImplicitAny": false,
        "sourceMap": true,
        "outDir": "build",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "declaration": true,
        "importHelpers": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [
          "ES2020",
          "ES2017",
          "esnext.asynciterable"
        ]
    },
    "exclude": [
        "node_modules"
    ]
}